    "@slack/webhook": "^6.1.0",
    "algoliasearch": "^4.13.1",
    "axios": "^0.27.2",
    "dayjs": "^1.11.3",
    "framer-motion": "^6.3.11",
    "microcms-js-sdk": "^2.0.0",
