{
  "name": "scrumy-hp",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p -c lint:*",
    "lint:eslint": "eslint src --ext .js,jsx,.ts,.tsx",
    "lint:prettier": "prettier --check .",
    "fix": "run-s -c fix:eslint fix:prettier",
